  <h2>コメントを編集する</h2>

    <% if @comment.errors.any? %>
      <div id="error_explanation">
      <h2><%= @comment.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
      </div>
    <% end %>
    <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
  
